<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fade"
    tools:context=".InsertJob"
    android:padding="10dp">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="youremail@gmail.com"
        android:layout_below="@+id/text"
        android:textSize="19dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/imageJob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_round"
        android:layout_below="@+id/email"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageJob"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:hint="Full Name"
        android:textSize="21dp" />

    <EditText
        android:id="@+id/clg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="College Name"
        android:textSize="21dp" />


    <EditText
        android:id="@+id/deg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clg"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Year of Degree:"
        android:textSize="21dp" />

    <EditText
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/deg"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Gender:"
        android:textSize="21dp" />


    <EditText
        android:id="@+id/interests"
        android:hint="Interests:"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:textSize="21dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender"/>

    <EditText
        android:id="@+id/links"
        android:hint="Github:"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:textSize="21dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/interests"/>


    <Button
        android:id="@+id/btnSave"
        android:layout_width="189dp"
        android:layout_height="59dp"
        android:layout_below="@+id/links"
        android:layout_marginStart="220dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="SAVE"
        android:textSize="19dp" />


</RelativeLayout>