<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fade"
    tools:context=".Choose">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="sans-serif"
        android:text="What brings you here?"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="15pt" />

    <Button
        android:id="@+id/btn_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/bg_color"
        android:padding="20dp"
        android:text="I'm a Student"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="10pt" />

    <Button
        android:id="@+id/btn_emp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_user"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/bg_color"
        android:padding="20dp"
        android:text="I'm looking forward to hire a fresher"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="10pt" />


</RelativeLayout>